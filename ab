#include<bits/stdc++.h> 
using namespace std; 
int main () 
{ 
double a,b,PI; 
int c; 
cout<<endl; 
cout<<"#******************** Calculator ******************#\n"; 
cout<<"---------------------------------------------------\n"; 
cout<<"Operations\t"<<"\tTrigonometric Functions"<<"\t\tLogarithmic Functions\n"; 
cout<<"------------------------------------------------\n"; 
cout<<"1: Division\t\t"<<"7: Sin\t\t"<<"\t\t13: Log"<<endl; 
cout<<"2: Multiplication\t"<<"8: Cos\t\t"<<"\t\t14: Log with base 10"<<endl; 
cout<<"3: Subtraction\t\t"<<"9: Tan\t\t"<<endl; 
cout<<"4: Addition\t\t"<<"10: Sin Inverse"<<endl; 
cout<<"5: Exponent\t\t"<<"11: Cos Inverse"<<endl; 
cout<<"6: Square root\t\t"<<"12: Tan Inverse"<<endl; 
cout<<"Enter the function that you want to perform : "; 
cin>>c; 
PI=3.14159265; 
if(c>=1 && c<=4)
{
   cout<<"Enter 1st number : ";   
   cin>>a; 
   cout<<"Enter 2nd number : ";   
   cin>>b; 

if(c==1) 
cout<<"Division = "<<a/b<<endl; 
if(c==2)
cout<<"Multiplication = "<<a*b<<endl; 
if(c==3) 
cout<<"Subtraction = "<<a-b<<endl; 
if(c==4)
cout<<"Addition = "<<a+b<<endl; 
}
else if(c>=5 && c<=14)
{
    cout<<"Enter the number : ";
    cin>>a;
    
if(c==5)
{
cout<<"Enter the exponent : ";  
cin>>b; 
cout<<"Exponent = "<<pow(a,b)<<endl; 
} 
if(c==6)
cout<<"Square Root = "<<sqrt(a)<<endl; 
if(c==7)
cout<<"Sin = "<<sin(a)<<endl; 
if(c==8)
cout<<"Cos = "<<cos(a)<<endl; 
if(c==9) 
cout<<"Tan = "<<tan(a)<<endl; 
if(c==10) 
cout<<"Inverse of Sin = "<<asin(a)*180.0/PI<<endl; 
if(c==11) 
cout<<"Inverse of Cos = "<<acos(a)*180.0/PI<<endl; 
if(c==12) 
cout<<"Inverse of tan = "<<atan(a)*180.0/PI<<endl; 
if(c==13)
cout<<"Log = "<<log(a)<<endl; 
if(c==14)
cout<<"Log with base 10 = "<<log10(a)<<endl; 
}
else
cout<<"Wrong Input"<<endl; 
}
